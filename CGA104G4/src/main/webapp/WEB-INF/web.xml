<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>CGA104G4</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>SetCharacterEncoding</filter-name>
    <filter-class>com.filter.SetCharacterEncoding</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>ignore</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>SetCharacterEncoding</filter-name>
    <url-pattern>/*</url-pattern>
    <!--    <servlet-name></servlet-name>-->
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>INCLUDE</dispatcher>
    <dispatcher>ERROR</dispatcher>
    <dispatcher>ASYNC</dispatcher>
  </filter-mapping>

    <filter>
      <filter-name>memberLoginFilter</filter-name>
      <filter-class>com.filter.memberFilter</filter-class>
    </filter>
    <filter-mapping>
      <filter-name>memberLoginFilter</filter-name>
      <url-pattern>/front-end/memberinfoupdate.html</url-pattern>
      <url-pattern>/front-end/memberupatepassword.html</url-pattern>
<!--      <servlet-name></servlet-name>-->
      <dispatcher>REQUEST</dispatcher>
      <dispatcher>FORWARD</dispatcher>
      <dispatcher>INCLUDE</dispatcher>
      <dispatcher>ERROR</dispatcher>
      <dispatcher>ASYNC</dispatcher>
    </filter-mapping>
    <servlet>
    <servlet-name>DetailServlet</servlet-name>
    <servlet-class>com.detail.controller.DetailServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DetailServlet</servlet-name>
    <url-pattern>/detail/detail.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>OrdersServlet</servlet-name>
    <servlet-class>com.orders.controller.OrdersServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OrdersServlet</servlet-name>
    <url-pattern>/orders/orders.do</url-pattern>
  </servlet-mapping>
</web-app>