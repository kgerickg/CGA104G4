<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>CGA104G4</display-name>
    <welcome-file-list>
        <welcome-file>/front-index/index.html</welcome-file>
    </welcome-file-list>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <context-param>
        <param-name>contextClass</param-name>
        <param-value>
            org.springframework.web.context.support.AnnotationConfigWebApplicationContext
        </param-value>
    </context-param>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>com.springconfiguration.AppConfig</param-value>
    </context-param>

    <filter>
        <filter-name>SetCharacterEncoding</filter-name>
        <filter-class>com.filter.SetCharacterEncoding</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>ignore</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SetCharacterEncoding</filter-name>
        <url-pattern>/*</url-pattern>
        <!--    <servlet-name></servlet-name>-->
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
        <dispatcher>ASYNC</dispatcher>
    </filter-mapping>
	<filter>
		<filter-name>memberLoginFilter</filter-name>
		<filter-class>com.filter.memberFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>memberLoginFilter</filter-name>
		<url-pattern>/front-member/memberinfoupdate.html</url-pattern>
		<url-pattern>/front-member/memberupatepassword.html</url-pattern>
		<url-pattern>/front-refill/refill.html</url-pattern>
		<!-- <servlet-name></servlet-name> -->
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
		<dispatcher>ERROR</dispatcher>
		<dispatcher>ASYNC</dispatcher>
	</filter-mapping>
	<filter>
		<filter-name>HibernateFilter</filter-name>
		<filter-class>
			org.springframework.orm.hibernate5.support.OpenSessionInViewFilter
		</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>HibernateFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>DetailServlet</servlet-name>
		<servlet-class>com.detail.controller.DetailServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DetailServlet</servlet-name>
		<url-pattern>/detail/detail.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>OrdersServlet</servlet-name>
		<servlet-class>com.orders.controller.OrdersServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>OrdersServlet</servlet-name>
		<url-pattern>/orders/orders.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ProdServlet</servlet-name>
		<servlet-class>com.prod.controller.ProdServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ProdServlet</servlet-name>
		<url-pattern>/prod/prod.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>PhotoServlet</servlet-name>
		<servlet-class>com.photo.controller.PhotoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PhotoServlet</servlet-name>
		<url-pattern>/photo/photo.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>NameServlet</servlet-name>
		<servlet-class>com.message.controller.NameServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NameServlet</servlet-name>
		<url-pattern>/chat.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ShowImageFromDB</servlet-name>
		<servlet-class>com.photo.io.ShowImageFromDB</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShowImageFromDB</servlet-name>
		<url-pattern>/ShowImageFromDB</url-pattern>
	</servlet-mapping>
	<resource-ref>
	<description>DB Connection</description>
	<res-ref-name>jdbc/FOOD</res-ref-name>
	<res-type>javax.sql.DataSource</res-type>
	<res-auth>Container</res-auth>
	</resource-ref>
</web-app>